@{
	ViewData["Title"] = "Home Page";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Music_app.ViewModels.HomeVM
@{
	int index = 1;
}
@section Play_List {
	<div class="menu_song">
		@foreach (var item in Model.BaiHatVMs)
		{
			<li class="songItem" data-linknhac="@item.LinkNhac">
				<span>@index</span>
				<img src="~/Source/BaiHatIm/@item.LinkAnh" alt="@item.TenTG">
				<h5>
					@item.TenBaiHat
					<div class="subtitle">@item.TenTG</div>

				</h5>
				<i class="bi playListPlay bi-play-circle-fill " id="@item.IdbaiHat" data-linknhac="@item.LinkNhac"></i>
			</li>
			index++;
		}
	</div>
}

@section Author_Song {
	<h1>Alan Walker-Fade</h1>
	<p>
		You were the shadow to my light Did you feel us Another start fade
		<br>
		Away afraid our aim is out of sight Wanna see us Alive
	</p>
}

@section Popular_Song {
	<div class="popular_song">
		<div class="h4">
			<h4>Popular Song</h4>
			<div class="btn_s">
				<i id="left_scroll" class="bi bi-arrow-left-short"></i>
				<i id="right_scroll" class="bi bi-arrow-right-short"></i>
			</div>
		</div>
		<div class="pop_song">
			@foreach (var item in Model.BaiHatVMs)
			{
				<li class="songItem" data-linknhac="@item.LinkNhac">
					<div class="img_play">
						<img src="~/Source/BaiHatIm/@item.LinkAnh" alt=@item.TenTG>
						<i class="bi playListPlay bi-play-circle " id="@item.IdbaiHat" data-linknhac="@item.LinkNhac"></i>
					</div>
					<h5>
						@item.TenBaiHat
						<br>
						<div class="subtitle">@item.TenTG</div>

					</h5>
				</li>

			}


		</div>
	</div>
}

@section Popular_Artist {
	<div class="popular_artists">
		<div class="h4">
			<h4>Popular Artists</h4>
			<div class="btn_s">
				<i id="left_scrolls" class="bi bi-arrow-left-short"></i>
				<i id="right_scrolls" class="bi bi-arrow-right-short"></i>
			</div>
		</div>
		<div class="item">
			@foreach (var item in Model.TacGiaVMs)
			{
				<li data-id="@item.IdtacGia" class="artistItem">
					<a href="@Url.Action("DanhSachBaiHat", "TacGia", new { id = item.IdtacGia })">
						<img src="~/Source/TacGiaIm/@item.LinkAnh" alt="@item.TenTg" title="@item.TenTg">
					</a>
				</li>
			}


		</div>
	</div>
}

@section Recomended_Song {
	<div class="recomended_song">
		<div class="h4">
			<h4>Recomended Album</h4>
			<div class="btn_s">
				<i id="left_scroll" class="bi bi-arrow-left-short"></i>
				<i id="right_scroll" class="bi bi-arrow-right-short"></i>
			</div>
		</div>
		<div class="pop_song">
			@foreach (var item in Model.AlbumVMs)
			{
				<li class="albumItem">
					<div class="img_play">
						<a asp-controller="Album" asp-action="Details" asp-route-id="@item.Idalbum">
							<img src="../Source/AlbumIm/@item.LinkAnh" alt="@item.TenTG">

						</a>
					</div>
					<h5>
						@item.TenAlbum
						<br>
						<div class="subtitle">@item.TenTG</div>

					</h5>
				</li>
			}

		</div>
	</div>
}
